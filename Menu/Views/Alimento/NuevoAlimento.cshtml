@using Menu.HtmlHelpers;
@model Menu.Models.NuevoAlimentoViewModel

<div class="h5 mid-line text-center">
    <span class="mid-title">Nuevo Alimento</span>
</div>
@using (Html.BeginForm("NuevoAlimento", "Alimento", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-xs-12">
            @Html.ValidationMessageFor(m => m.Alimento.Nombre)
            @Html.TextBoxFor(m => m.Alimento.Nombre, new { @class = "borderless h4 underlined", placeholder = "Nombre", style = "width: 100%;" })
        </div>
    </div>

    <div class="row">
        <div class="main-pic">
            @Html.ImageUpload("Alimento.Imagen", "Subir foto", "Content/image-icon.png", "Content/2.gif")
        </div>
        <div id="privacy">
            <div class="ptr col-xs-1 text-center">
                <span class="glyphicon glyphicon-eye-open text-muted" data-toggle="tooltip" title="Publico"></span>
            </div>
            <div class="ptr col-xs-1 text-center">
                <span class="glyphicon glyphicon-eye-close" data-toggle="tooltip" title="Privado"></span>
            </div>
            <div id="privacy-display" class="col-xs-4">
                @Html.DisplayFor(m => m.Alimento.Privacidad)
            </div>
            @Html.HiddenFor(m => m.Alimento.Privacidad)
        </div>

        <div id="precio">
            <div class="col-xs-6 price">
                @Html.ValidationMessageFor(m => m.Alimento.Precio)
                $ @Html.TextBoxFor(m => m.Alimento.Precio, new { @class = "borderless", placeholder = "Precio", type = "number", step="0.10", style="width: 80%;"})
            </div>
        </div>
        <div id="tiempoEspera" data-toggle="tooltip" title="Tiempo de espera">
            <div class="col-xs-1 text-center">
                <span class="fas fa-stopwatch"></span>
            </div>
            <div class="col-xs-5">
                @Html.TextBoxFor(m => m.Alimento.Espera, new { @class = "borderless", type = "number", style = "width: 30%;" }) min.
            </div>
        </div>
        <div id="porciones" data-toggle="tooltip" title="Porciones">
            <div class="col-xs-1 text-center">
                <span class="fa fa-users"></span>
            </div>
            <div class="col-xs-5">
                @Html.TextBoxFor(m => m.Alimento.Porciones, new { @class = "borderless", type = "number", style = "width: 30%;" })
            </div>
        </div>

        <div >
            <div class="col-xs-1">
                <input type="checkbox" id="esReceta" name="Alimento.esReceta" />
            </div>
            <div class="col-xs-5">
                ¿Es receta?
            </div>
        </div>
        
        <div id="horario" data-toggle="tooltip" title="Distancia">
            

        </div>
        <!--
        <div id="Tabs">
            @Html.Partial("Tabs", Model.Tabs)
        </div>
            -->
    </div>
}